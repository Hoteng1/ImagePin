@model IEnumerable<ListShop.Web.Models.ImageModel>

@{
    ViewBag.Title = "Tape";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Taped</h2>

<p>
    @Html.ActionLink("Create New", "Create", new { area = "" }, new { @class = "navbar-brand" })
</p>

@foreach (var item in Model) {
    <div class=" col-lg-8 col-lg-offset-3">
        <div class="card bg-gradient-primary">
            <h4 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h4>
            <div class="card-img-top">
                @Html.Raw("<img style='width:600px; height:600px;'   src=\"data:image/jpeg;base64,"
                              + Convert.ToBase64String(item.Resurse) + "\" />")
            </div>
            <div class="card-block bg-gradient-primary">
            <hr class="my-4">
                <p>#@Html.ActionLink(item.Pin.ToString(),"Category")</p>
                <p>Own:@Html.DisplayFor(modelItem => item.Own_Name)</p>
                <p><div id=@item.Id.ToString()>@Html.DisplayFor(modelItem => item.CountLike)</div>@Ajax.ActionLink(" ", "Likes", new { Id = item.Id }, new AjaxOptions { UpdateTargetId = item.Id.ToString(), InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "glyphicon glyphicon-heart" })</p>
        </div>
    </div>
        </div>
    
}
<script src="~/Scripts/MicrosoftAjax.js" type="text/javascript"></script>
<script src="~/Scripts/MicrosoftMvcAjax.js" type="text/javascript"></script>



